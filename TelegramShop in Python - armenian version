import telebot
import sqlite3
from telebot import types


bot = telebot.TeleBot ('TOKEN')
name = None
@bot.message_handler(commands=['start'])
def start (message):
    conn = sqlite3.connect('sqliteshop.sql')
    cur = conn.cursor()
    
    cur.execute('CREATE TABLE IF NOT EXISTS users(id int auto_increment primary key, name varchar(50), email varchar (50))')
    conn.commit()
    cur.close()
    conn.close()
    bot.send_message(message.chat.id, ('Ô³Ö€Õ¡Õ¶ÖÕ¾Õ¥Õ¬Õ¸Ö‚ Õ°Õ¡Õ´Õ¡Ö€ Õ´Õ¸Ö‚Õ¿Ö„Õ¡Õ£Ö€Õ¥Ö„ ÕÕ¥Ö€ Õ¡Õ¶Õ¸Ö‚Õ¶Õ¨'))
    bot.register_next_step_handler(message,user_name)

def user_name(message):
    global name
    name=message.text.strip()
    bot.send_message(message.chat.id, ('Õ„Õ¸Ö‚Õ¿Ö„Õ¡Õ£Ö€Õ¥Ö„ Õ±Õ¥Ö€ Õ§Õ¬.ÖƒÕ¸Õ½Õ¿Õ¨ Õ¯Õ¡Õ´ Gmail-Õ¨'))
    bot.register_next_step_handler(message,user_email)

def user_email(message):
    email = message.text.strip()
    conn = sqlite3.connect('sqliteshop.sql')
    cur = conn.cursor()
    
    cur.execute("INSERT INTO users (name,email)VALUES ('%s','%s')" % (name, email))
    conn.commit()
    cur.close()
    conn.close()

    bot.send_message(message.chat.id, ('Õ•Õ£Õ¿Õ¡Õ¿Õ¥Ö€Õ¨ Ô³Ö€Õ¡Õ¶ÖÕ¾Õ¡Õ® Õ§'))
    bot.send_message(message.chat.id, ('ÕˆÕ²Õ»Õ¸Ö‚ÕµÕ¶, Õ½Õ¡ Steam Game Key Store-Õ¶ Õ§Ö‰ Ô³Õ¶Õ¥Ö„ Õ°Õ¡Õ´Õ¡Õ¯Õ¡Ö€Õ£Õ¹Õ« Õ­Õ¡Õ²Õ¥Ö€, Õ¸Ö€Õ¸Õ¶Ö„ Õ¬Õ«ÖÕ¥Õ¶Õ¦Õ¡Õ¾Õ¸Ö€Õ¾Õ¡Õ® Õ¥Õ¶ Steam-Õ« Õ°Õ¡Õ´Õ¡Ö€ ğŸ® \n'
                                       'Ô³Õ¶Õ¥Õ›Ö„ Õ­Õ¡Õ²Õ¥Ö€ Õ€Õ¡ÕµÕ¡Õ½Õ¿Õ¡Õ¶Õ¸Ö‚Õ´, ÕŒÕ¸Ö‚Õ½Õ¡Õ½Õ¿Õ¡Õ¶Õ¸Ö‚Õ´, ÕˆÖ‚Õ¯Ö€Õ¡Õ«Õ¶Õ¡ÕµÕ¸Ö‚Õ´, Ô²Õ¥Õ¬Õ¡Õ¼Õ¸Ö‚Õ½Õ¸Ö‚Õ´ ÖÕ¡Õ®Ö€ Õ£Õ¶Õ¸Õ¾Ö‰ ğŸ® \n'
                                       'ÕÕ¥Õ²Õ´Õ¥Ö„ /help Õ¸Ö€ÕºÕ¥Õ½Õ¦Õ« Õ¢Õ¸Õ¿Õ¨ Õ¯Õ¡Ö€Õ¸Õ²Õ¡Õ¶Õ¡ Ö…Õ£Õ¶Õ¥Õ¬ Õ±Õ¥Õ¦ Õ­Õ¡Õ²Õ¥Ö€ Õ£Õ¶Õ¥Õ¬ Õ´Õ¥Õ¦Õ¡Õ¶Õ«Ö'))

